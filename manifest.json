{
  "name": "Tubes Cursor",
  "version": "2.10.0",
  "sdkVersion": "2.15.0",
  "type": "widget",
  "categories": ["cursor", "3d", "interactive"],
  "description": "Interactive 3D tubes that follow the cursor with colorful lights and glow effect",
  "author": "rayandu924",
  "ui": {
    "pointerEventsNone": true,
    "fixedToViewport": true
  },
  "capabilities": {
    "hotReload": true,
    "systemEvents": ["viewport:resize", "visibility:change", "cursor:move"]
  },
  "settings": {
    "generalSection": {
      "type": "section",
      "label": "‚öôÔ∏è General"
    },
    "passthrough": {
      "type": "boolean",
      "label": "Click Passthrough",
      "description": "Allow clicks to pass through to elements below (recommended for cursor overlays)",
      "default": true
    },

    "tubesSection": {
      "type": "section",
      "label": "üé® Tubes"
    },
    "tubeCount": {
      "type": "range",
      "label": "Number of Tubes",
      "default": 16,
      "min": 1,
      "max": 32,
      "step": 1
    },
    "tubeRadius": {
      "type": "range",
      "label": "Tube Thickness",
      "description": "Radius of all tubes",
      "default": 0.03,
      "min": 0.005,
      "max": 0.15,
      "step": 0.005
    },
    "tubeLength": {
      "type": "range",
      "label": "Tube Length",
      "description": "Number of segments (longer = more trail)",
      "default": 64,
      "min": 1,
      "max": 256,
      "step": 1
    },

    "materialSection": {
      "type": "section",
      "label": "‚ú® Material"
    },
    "metalness": {
      "type": "range",
      "label": "Metalness",
      "default": 1,
      "min": 0,
      "max": 1,
      "step": 0.05
    },
    "roughness": {
      "type": "range",
      "label": "Roughness",
      "default": 0.25,
      "min": 0,
      "max": 1,
      "step": 0.05
    },

    "animationSection": {
      "type": "section",
      "label": "üåä Animation"
    },
    "smoothness": {
      "type": "range",
      "label": "Smoothness (Lerp)",
      "description": "How quickly tubes follow the cursor (lower = smoother)",
      "default": 0.35,
      "min": 0.01,
      "max": 0.5,
      "step": 0.01
    },
    "noise": {
      "type": "range",
      "label": "Noise",
      "description": "Organic movement intensity",
      "default": 0.05,
      "min": 0,
      "max": 0.3,
      "step": 0.01
    },

    "tubeColorsSection": {
      "type": "section",
      "label": "üé® Tube Colors (Gradient)"
    },
    "tubeColor1": {
      "type": "color",
      "label": "Color 1",
      "default": "#f967fb"
    },
    "tubeColor2": {
      "type": "color",
      "label": "Color 2",
      "default": "#ff6b6b"
    },
    "tubeColor3": {
      "type": "color",
      "label": "Color 3",
      "default": "#53bc28"
    },
    "randomizeTubeColors": {
      "type": "button",
      "label": "Actions",
      "buttonLabel": "üé≤ Randomize Tube Colors"
    },

    "lightColorsSection": {
      "type": "section",
      "label": "üí° Lights"
    },
    "lightIntensity": {
      "type": "range",
      "label": "Light Intensity",
      "default": 40,
      "min": 0,
      "max": 500,
      "step": 10
    },
    "lightColor1": {
      "type": "color",
      "label": "Light 1 (Bottom-Left)",
      "default": "#83f36e"
    },
    "lightColor2": {
      "type": "color",
      "label": "Light 2 (Top-Left)",
      "default": "#fe8a2e"
    },
    "lightColor3": {
      "type": "color",
      "label": "Light 3 (Bottom-Right)",
      "default": "#ff008a"
    },
    "lightColor4": {
      "type": "color",
      "label": "Light 4 (Top-Right)",
      "default": "#60aed5"
    },
    "randomizeLightColors": {
      "type": "button",
      "label": "Actions",
      "buttonLabel": "üé≤ Randomize Light Colors"
    },

    "bloomSection": {
      "type": "section",
      "label": "üåü Bloom Effect"
    },
    "bloomEnabled": {
      "type": "boolean",
      "label": "Enable Bloom",
      "default": false
    },
    "bloomThreshold": {
      "type": "range",
      "label": "Threshold",
      "default": 0,
      "min": 0,
      "max": 1,
      "step": 0.05
    },
    "bloomStrength": {
      "type": "range",
      "label": "Strength",
      "default": 0.3,
      "min": 0,
      "max": 3,
      "step": 0.1
    },
    "bloomRadius": {
      "type": "range",
      "label": "Radius",
      "default": 0.2,
      "min": 0,
      "max": 2,
      "step": 0.1
    },

    "sleepSection": {
      "type": "section",
      "label": "üò¥ Sleep Mode (When Cursor Outside)"
    },
    "sleepRadiusX": {
      "type": "range",
      "label": "Horizontal Radius",
      "default": 300,
      "min": 50,
      "max": 600,
      "step": 10
    },
    "sleepRadiusY": {
      "type": "range",
      "label": "Vertical Radius",
      "default": 150,
      "min": 50,
      "max": 400,
      "step": 10
    },
    "sleepSpeedX": {
      "type": "range",
      "label": "Horizontal Speed",
      "default": 1,
      "min": 0.1,
      "max": 5,
      "step": 0.1
    },
    "sleepSpeedY": {
      "type": "range",
      "label": "Vertical Speed",
      "default": 2,
      "min": 0.1,
      "max": 5,
      "step": 0.1
    },

    "actionsSection": {
      "type": "section",
      "label": "‚ö° Quick Actions"
    },
    "randomizeAll": {
      "type": "button",
      "label": "Randomize",
      "buttonLabel": "üé≤ Randomize All Colors"
    }
  },
  "defaultLayout": {
    "xPercent": 50,
    "yPercent": 50,
    "widthPercent": 100,
    "heightPercent": 100
  }
}
